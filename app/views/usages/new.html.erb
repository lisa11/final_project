<!-- Validation failure messages -->
<% if @usage.errors.any? %>
  <% @usage.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Usage</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_usage" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for favorite_id -->
      <div class="form-group">
        <label for="favorite_id" class="control-label">
          Favorite
        </label>

        <%= select_tag(:favorite_id, options_from_collection_for_select(Favorite.all, :id, :product_id, @usage.favorite_id), :class => "form-control") %>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @usage.date %>">
      </div>

      <button class="btn btn-success">
        Create Usage
      </button>
      or
      <a href="/usages">Cancel</a>
    </form>
  </div>
</div>
